      <% else %>
        <li><a href="/sign_in">Sign In</a></li>
        <li><a href="/users/new">Sign Up</a></li>
      <% end %>
    </ul>

  </nav>

  <%= yield %>
  <img src="http://localhost:9393/xkcd.jpg" class="title_img">

</body>
</html>
